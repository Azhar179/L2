pipeline {
    agent any

    environment {
        LIQUIBASE_VERSION = '4.28.0'
        DB_URL = 'jdbc:mysql://localhost:3306/liquibase15.8'
        DB_USERNAME = 'root'
        DB_PASSWORD = 'root'
        CHANGELOG_FILE = 'C:/Users/azbag/Downloads/liquibase15.8/demo/src/main/resources/db/changelog/changelog-master.xml'
        LOCAL_CHANGLOG_VOLUME = 'C:/Users/azbag/Downloads/liquibase15.8/demo/src/main/resources/db/changelog'
        CONTAINER_CHANGLOG_VOLUME = '/liquibase/changelog'
        LOCAL_DRIVER_PATH = 'C:/Users/azbag/AppData/Roaming/JetBrains/IntelliJIdea2024.1/jdbc-drivers/MySQL ConnectorJ/8.2.0/com/mysql/mysql-connector-j/8.2.0'  // Update this path
        CONTAINER_DRIVER_PATH = '/liquibase/mysql-connector-java-8.0.x.jar'
    }

    stages {
        stage('Install Liquibase') {
            steps {
                bat 'docker pull liquibase/liquibase:4.28.0'
            }
        }

        stage('Apply Database Changes') {
            steps {
                script {
                    // Run Liquibase update command inside Docker container
                    bat """
                    docker run --rm --name liquibase ^
                        -v ${LOCAL_CHANGLOG_VOLUME}:${CONTAINER_CHANGLOG_VOLUME} ^
                        -v ${LOCAL_DRIVER_PATH}:${CONTAINER_DRIVER_PATH} ^
                        liquibase/liquibase:4.28.0 ^
                        --changeLogFile=${CONTAINER_CHANGLOG_VOLUME}/changelog-master.xml ^
                        --url=${DB_URL} ^
                        --username=${DB_USERNAME} ^
                        --password=${DB_PASSWORD} ^
                        --classpath=${CONTAINER_DRIVER_PATH} ^
                        update
                    """
                }
            }
        }
    }

    post {
        always {
            bat 'docker container prune -f'
        }
    }
}
